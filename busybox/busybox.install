_addgroup() {
    if ! bin/grep -q "^$1:" etc/group; then
        usr/sbin/groupadd ${@} >/dev/null
    fi
}

_adduser() {
    if ! bin/grep -q "^$1:" etc/passwd; then
        usr/sbin/useradd ${@} >/dev/null
    fi
}

post_install() {
    _addgroup cron      -g 16
    _addgroup crontab   -g 409
}

post_upgrade() {
    post_install
    grpck -r 2>/dev/null && grpconv
}
